<div class="absolute bottom-0 top-0 left-0 right-0 flex items-center justify-items-center justify-center padding">
  <div class="form-login-container p-7 rounded-lg w-1/5 text-white shadow-2xl">

    <img src="<%= asset_pack_path 'media/images/LogoMM.png' %>" class="px-10" />
    <h2 class="text-center font-bold my-3">SYSTEM</h2>
    <p class="text-xs">Bienvenido! Ingresa Email y Contraseña para continuar</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: '') do |f| %>
      <div class="field">
        <%#= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full h-10 px-5 rounded opacity-80 text-gray-800 shadow-lg", placeholder: "Usuario" %>
      </div>

      <div class="field">
        <%#= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password",
          class: "w-full h-10 px-5 rounded opacity-80 text-gray-800 shadow-lg", placeholder: "Contraseña" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recordarme' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Iniciar Sesión", class: 'devise-submit h-10 w-full rounded shadow mt-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>

